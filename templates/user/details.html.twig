{% extends 'base.html.twig' %}

{% block title %}{{app.user.name}}{% endblock %}

{% block body %}
    <table class="table">
        <thead class="thead-dark">
            <tr>
                <th>{{ 'Name'|trans }}</th>
                <th>{{ 'Description'|trans }}</th>
                <th>{{ 'Quantity'|trans }}</th>
                <th>{{ 'cart.price'|trans }}</th> 
                <th>{{ 'Picture'|trans }}</th>
            </tr>
        </thead>
        <tbody>
            {% for cartContent in cart.cartContents %}
                <tr>
                    <td><a href="{{ path('one_product', {'id':cartContent.product.id}) }}">{{cartContent.product.name}}</a></td>
                    <td>{{cartContent.product.description}}</td>
                    <td>{{cartContent.quantity}}</td>
                    <td>{{cartContent.product.price * cartContent.quantity}}â‚¬</td>
                    <td><img class="img-thumbnail" src="{{asset('/uploads/'~ cartContent.product.picture)}}" style="height:75px;"></td> 
                </tr>
            {% endfor %}
        </tbody>
        </table>
        <p>Date d'achat : {{cart.purchaseDate|date('Y-m-d')}}</p>
{% endblock %}
