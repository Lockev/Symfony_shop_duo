{% extends 'base.html.twig' %}

{% block title %}{{ 'title.product'|trans }}{% endblock %}

{% block body %}
<style>
</style>

<div class="container">

  <h1>{{ 'produit.titre'|trans }}</h1>
  {% if products is not empty %}
    <table class="table">
      <thead class="thead-dark">
        <tr>
          <th>{{ 'name'|trans }}</th>
          <th>{{ 'description'|trans }}</th>
          <th>{{ 'price'|trans }}</th>
          <th>{{ 'stock'|trans }}</th>
          <th>{{ 'picture'|trans }}</th>
        </tr>
      </thead>
      <tbody>
        {% for product in products %}
          <tr>
            <td class="align-middle"><a href="{{ path('one_product', {'id':product.id}) }}">{{ product.name }}</a></td>
            <td class="align-middle">{{ product.description }}</td>
            <td class="align-middle">{{ product.price }}â‚¬</td>
            <td class="align-middle">{{ product.stock }}</td>
            <td class="align-middle"><img src="{{asset('/uploads/'~ product.picture)}}" class="img-thumbnail" style="height:120px"></td>
          </tr>
        {% endfor %}
      </tbody>
    </table>
  {% else %}
    <p>{{ 'cart.none'|trans }}</p>
  {% endif %}
  

  {% if is_granted('ROLE_ADMIN') %}
  <hr>
  <h1>{{ 'product.add'|trans }}</h1>
    {{ form_start(form_new) }}
    {{ form_end(form_new) }}
  {% endif %}
</div>
{% endblock %}

